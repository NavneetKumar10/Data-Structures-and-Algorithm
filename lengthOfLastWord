class Solution {
    public int lengthOfLastWord(String s) {
        // Split the string into words
        String[] words = s.split(" ");
        
        // Get the last word (if there's at least one word)
        if (words.length > 0) {
            return words[words.length - 1].length();
        }
        
        // No words found
        return 0;
    }
}
